<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.WelcomeActivity">
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenue"
        android:textColor="@color/gris"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/saisissez_votre_nom_et_prenom"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/et_welcome_prenom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center_horizontal"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/ll_welcome"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/grid_welcome">

        <TextView
            android:id="@+id/tv_envoyer_email"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_envoyer_email"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24"/>
    </LinearLayout>

</GridLayout>