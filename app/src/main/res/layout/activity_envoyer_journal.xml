<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.EnvoyerJournalActivity">

    <GridLayout
        android:id="@+id/gl_envoyer_journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ib_envoyer_journal_retour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_home_24"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/envoyer_son_journal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/gris" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_date_debut_journal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grid_arrondi">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_jour_debut_journal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="@string/debut"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_date_debut_journal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginStart="20dp"
                    android:textSize="17sp"
                    android:textColor="@color/white"/>
            </GridLayout>


            <ImageView
                android:id="@+id/iv_date_debut_journal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_calendar_today_24_green"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_date_fin_journal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grid_arrondi">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_jour_fin_journal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="@string/fin"
                    android:textSize="17sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_date_fin_journal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_weight="42"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:textSize="17sp"
                    android:textColor="@color/white"/>
            </GridLayout>

            <ImageView
                android:id="@+id/iv_date_fin_journal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_calendar_today_24_green"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_envoyer_journal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grid_arrondi_vert">

            <TextView
                android:id="@+id/tv_envoyer_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="@string/envoyer"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_envoyer_email"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_send_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_telecharger_journal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grid_arrondi_vert">

            <TextView
                android:id="@+id/tv_telecharger_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="@string/telecharger"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_telecharger_email"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_arrow_circle_down_24"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>